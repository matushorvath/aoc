{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang++-11 build active file",
            "command": "/usr/bin/clang++-11",
            "args": [
                "-std=c++17",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }s
        }
    ],
    "version": "2.0.0"
}